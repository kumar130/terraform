
resource "aws_instance" "master" {
  ami = "ami-7ea88d1b"
  instance_type = "t2.micro"
  key_name = "mykey"
  subnet_id = "${aws_subnet.main-public.id}"

tags {
 Name = "master"
}

  provisioner "file" {
    source = "script.sh"
    destination = "/tmp/script.sh"
  }
  provisioner "remote-exec" {
    inline = [
      "chmod +x /tmp/script.sh",
      "sudo /tmp/script.sh"
    ]
  }
}
